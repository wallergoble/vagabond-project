
<h1> Hello from City Show </h1>

<main class="container">
    <h1> <%= @city.city %> </h1>
    <section> Put a big picture here </section>
    <section class="well"> <%= @city.description %> </section>

    <h3> Tips for <%= @city.city %> </h3>

    <%= link_to 'Add a new post!', new_city_post_path(@city) %> 

    <section class="flex-container">

        <%  @city.posts.each do |post| %>
        <article class="tip">
            <h4> <%= link_to post.title, city_post_path(post) %> </h4>
            <br>
            <span class="author"> by <em><%= post.author %></span></em></h4>
            <h4><%= post.body %></h4>

            <p>
            <%= link_to 'Destroy post', [post.city, post],
                        method: :delete,
                        data: { confirm: 'Are you sure?'} %>
            </p>
        </article>
        <% end%>

    </section>


</main>

