<div class="container"
<%= form_for @post, url: {action: "update"} do |f| %>
  <article>
    <%= f.label :author %>
    <%= f.text_field :author, :class => "form-control"%>
  </article>

  <article>
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </article>
  
  <article>
    <%= f.label :body %>
    <%= f.text_area :body, :class => "form-control" %>
  </article>
  
  <article>
    <%= f.submit class: "btn btn-primary" %>
  </article>
</div>
<% end %>

